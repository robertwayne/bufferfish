{
    "name": "bufferfish",
    "version": "0.1.0",
    "description": "Schemaless binary protocol for game networking.",
    "main": "./dist/bufferfish.es.js",
    "author": "Rob Wagner <rob@sombia.com>",
    "private": true,
    "types": "./dist/index.d.ts",
    "scripts": {
        "build": "vite build",
        "mini": "terser ./lib/index.js --output ./lib/index.min.js",
