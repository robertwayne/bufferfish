{
    "name": "bufferfish",
    "version": "0.1.0",
    "description": "Schemaless binary protocol for game networking.",
    "repository": "https://github.com/robertwayne/bufferfish",
    "author": "Rob Wagner <rob@sombia.com>",
    "license": "(MIT OR Apache-2.0)",
    "main": "src/index.ts",
    "types": "dist/index.d.ts",
    "private": true,
    "scripts": {
        "build": "vite build",
        "fmt": "prettier --write --plugin-search-dir=. \"**/*.{ts,html,css,cjs,json,tsx}\"",
        "lint": "eslint \"src/**/*.{ts,tsx}\"",
        "lint:fix": "eslint --fix --fix-type problem,suggestion \"**/*.{ts,tsx}\"",
        "tsc": "tsc",
        "tsc:watch": "tsc --noEmit --watch",
        "test": "vitest run --no-watch",
        "test:watch": "vitest"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.59.5",
        "@typescript-eslint/parser": "^5.59.5",
        "eslint": "^8.40.0",
        "eslint-config-turbo": "^1.9.3",
        "happy-dom": "^9.10.9",
        "prettier": "^2.8.8",
        "typescript": "^5.0.4",
        "vite": "^4.3.5",
        "vitest": "^0.32.0"
    }
}
