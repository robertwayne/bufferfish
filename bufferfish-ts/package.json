{
    "name": "bufferfish",
    "version": "0.1.0",
    "description": "Schemaless binary protocol for game networking.",
    "repository": "https://github.com/robertwayne/bufferfish",
    "author": "Rob Wagner <rob@sombia.com>",
    "license": "(MIT OR Apache-2.0)",
    "main": "src/index.ts",
    "types": "dist/index.d.ts",
    "private": true,
    "scripts": {
        "build": "vite build && tsc",
        "fmt": "prettier --write --plugin-search-dir=. \"**/*.{ts,html,css,cjs,json,tsx}\"",
        "lint": "eslint \"src/**/*.{ts,tsx}\"",
        "lint:fix": "eslint --fix --fix-type problem,suggestion \"**/*.{ts,tsx}\"",
        "tsc": "tsc --noEmit",
        "tsc:watch": "tsc --noEmit --watch",
        "test": "vitest run",
        "test:watch": "vitest",
        "check": "npm run tsc && npm run lint:fix && npm run test && npm run fmt"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.53.0",
        "@typescript-eslint/parser": "^5.54.0",
        "eslint": "^8.34.0",
        "happy-dom": "^8.9.0",
        "prettier": "^2.8.4",
        "typescript": "^4.9.5",
        "vite": "^4.1.4",
        "vitest": "^0.29.1"
    }
}
