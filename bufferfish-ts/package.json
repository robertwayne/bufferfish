{
    "name": "bufferfish",
    "version": "0.1.0",
    "description": "Schemaless binary protocol for game networking.",
    "main": "./dist/bufferfish.es.js",
    "author": "Rob Wagner <rob@sombia.com>",
    "private": true,
    "types": "./dist/index.d.ts",
    "scripts": {
        "build": "vite build",
        "fmt": "prettier --write --plugin-search-dir=. **/*.{js,ts,html,css,cjs,mjs,json}",
        "lint": "eslint src/**/*.{js,ts}",
        "lint:fix": "eslint --fix --fix-type problem,suggestion src/**/*.{js,ts}",
        "tsc": "tsc --noEmit",
        "tsc:watch": "tsc --noEmit --watch",
        "test": "vitest run",
        "test:watch": "vitest",
        "check": "npm run tsc && npm run lint:fix && npm run test && npm run fmt"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.47.1",
        "@typescript-eslint/parser": "^5.47.1",
        "eslint": "^8.30.0",
        "happy-dom": "^8.1.1",
        "prettier": "^2.8.1",
        "typescript": "^4.9.4",
        "vite": "^4.0.3",
        "vitest": "^0.26.2",
        "vite-plugin-dts": "^1.7.1"
    }
}
